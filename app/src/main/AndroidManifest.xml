<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="trickyquestion.messenger">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.MessengerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".StartController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".main_screen.view.MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".add_friend_screen.view.AddFriendActivity"> </activity>

        <activity
            android:name=".login_screen.authentication.LoginScreenActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".login_screen.ask_password.AskPasswordActivity" />

        <activity
            android:name=".chat_screen.view.ChatActivity"
            android:theme="@style/Theme.Swipe.Back"/>

        <service
            android:name=".p2p_protocol.P2ProtocolService"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>