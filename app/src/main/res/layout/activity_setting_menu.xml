<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        style="@style/AppTheme.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:theme="@style/AppTheme.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_circle_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_user"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_add_friend_circle"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="105dp"/>

    <TextView
        android:id="@+id/setting_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/setting_toolbar"
        android:text="Taras Seniv"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/setting_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_login_name"
        android:layout_marginLeft="100dp"
        android:text="id: 1231255196199"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="130dp"
        android:background="@color/colorGrey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_setting_expanded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_circle_image"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>