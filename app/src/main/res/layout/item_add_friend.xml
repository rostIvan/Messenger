<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_friend_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        app:civ_border_width="1dp"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/colorBlack"/>

    <TextView
        android:id="@+id/add_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/add_friend_photo"
        android:layout_toRightOf="@+id/add_friend_photo"
        android:layout_toStartOf="@id/button_add_friend"
        android:layout_toLeftOf="@id/button_add_friend"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        tools:text="John Lennon"/>

    <TextView
        android:id="@+id/add_friend_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_friend_name"
        android:layout_alignStart="@+id/add_friend_name"
        android:layout_below="@+id/add_friend_name"
        android:layout_toStartOf="@id/button_add_friend"
        android:layout_toLeftOf="@id/button_add_friend"
        android:textColor="@color/colorGrey"
        tools:text="1232154680704672"/>

    <Button
        android:id="@+id/button_add_friend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_add_friend_circle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/add_friend_id"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@color/colorBlack"/>

</RelativeLayout>