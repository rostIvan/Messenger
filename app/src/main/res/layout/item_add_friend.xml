<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    tools:background="@color/colorWhite"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_friend_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/ic_user"
        android:src="@drawable/ic_user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorBlack"/>

    <TextView
        android:id="@+id/add_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        tools:text="John Lennon"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/add_friend_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        tools:text="1232154680704672"
        android:textColor="@color/colorGrey"/>

    <Button
        android:id="@+id/button_add_friend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_add_friend_circle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="70dp"/>

</RelativeLayout>