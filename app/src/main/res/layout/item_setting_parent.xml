<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/parent_setting_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_add_friend_circle"
        android:contentDescription="@string/image"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/parent_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/parent_list_item_expand_arrow"
        android:layout_toLeftOf="@+id/parent_list_item_expand_arrow"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:textStyle="normal"
        android:textSize="18sp"
        tools:text="Setting Title"
        android:layout_marginStart="50dp" />

    <ImageButton
        android:id="@+id/parent_list_item_expand_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="14dp"
        android:src="@drawable/ic_arrow"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:contentDescription="@string/image"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/parent_list_item_title"
        android:background="@color/colorGrey"
        android:layout_marginStart="65dp" />

</RelativeLayout>