<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="12dp"
    android:padding="8dp"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="20dp"
    app:bl_arrowPosition="-10dp"
    app:bl_arrowWidth="20dp"
    app:bl_bubbleColor="@android:color/white"
    app:bl_cornersRadius="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_dark"
            android:contentDescription="@string/image" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Taras Seniv" />

        <TextView
            android:id="@+id/account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#95989A"
            android:textSize="14sp"
            tools:text="id:32748392647116" />

        <TextView
            android:id="@+id/change_data_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="@string/change_my_data"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp" />
    </LinearLayout>

</com.daasuu.bl.BubbleLayout>
